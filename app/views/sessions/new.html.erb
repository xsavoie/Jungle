<h1>Login</h1>
<br>
<%= form_tag '/login' do %>

<div class="form-group">
  <%= label_tag :email %>
  <%= text_field_tag :email, nil,  class: 'form-control',
                              id: 'login-email',
                              placeholder: 'Email' %>
</div>

<div class="form-group">
  <%= label_tag :password %>
  <%= text_field_tag :password, nil,  class: 'form-control',
                                          id: 'login-password',
                                          placeholder: 'Password' %>
</div>
<%= submit_tag "Submit", class: 'btn btn-info' %>

<% end %>

